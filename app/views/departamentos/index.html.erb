<h1>Departamentos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Proyecto</th>
      <th>Piso departamento</th>
      <th>Area departamento</th>
      <th>Nro habitacion</th>
      <th>Foto departamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nombre_dep %></td>
        <td><%= departamento.piso_dep %></td>
        <td><%= departamento.area %></td>
        <td><%= departamento.nro_habitacion %></td>
         <td><%= departamento.foto_dep.count %></td>
        <td><%= link_to 'Mostrar', departamento_path(departamento, :proyecto_id => @proyecto.id) %></td>
        <td><%= link_to 'Editar', edit_departamento_path(departamento, :proyecto_id => @proyecto.id ) %></td>
        <td><%= link_to 'Eliminar', departamento, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

