            <%= form_tag proyectos_path, :method => "get" do %>
            Nombre <%= text_field_tag :nombre_proy, params[:nombre_proy] %>
        
           <%= submit_tag 'Buscar', nombre_proy: nil %>
           <% end %>

          </td>
